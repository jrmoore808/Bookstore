@{
    ViewData["Title"] = "Bookstore";
}

@model IQueryable<Book>

<div class="text-center">
    <h1 class="display-4">Welcome to the Online Bookstore</h1>
    <p>Check out our list of favorite books below!</p>
</div>

<div style="padding: 20px;" class="text-center">
    <h5 class="display-4">Best Books</h5>
    <table class="table table-bordered list-group-horizontal-lg">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>ISBN</th>
                <th>Classification</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Title</td>
                <td>@x.AuthorFirst @x.AuthorLast</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Classification</td>
                <td>@x.Category</td>
                <td>@x.Price</td>
            </tr>
            }
        </tbody>
    </table>
</div>
